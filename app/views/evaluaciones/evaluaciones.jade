.panel.panel-default.panel-hovered.panel-stacked.mb20
	.panel-heading 

		| {{ 'EVALUACIONES_MENU' | translate }}
	
	.panel-body


		md-button.md-default(ng-show="!creando" ng-click="crearNuevo()") Crear evaluaciones



		div(layout layout-wrap layout-padding)
			
			div(flex-gt-md="60" flex-md="100")
				#grid1.grid(ui-grid="gridOptions" ui-grid-edit ui-grid-resize-columns style="min-height: 400px")
			


			// Formulario para crear
			div(flex-gt-md="40" flex-md="100" ng-show="creando")
					
				form(layout="column" ng-submit="" layout-margin layout-wrap layout-padding)
					div(flex)
						label Nombre:
						input.form-control(type="text" ng-model="newEvaluacion.nombre")
					
					div(flex="40" flex-gt-lg="20" flex-sm="100")
						md-checkbox(ng-model="seleccionar_lider" aria-label="¿Traducido?")
							| Seleccionar lider
					div(flex ng-show="seleccionar_lider")
						md-select(placeholder="Seleccione Lider" ng-model="newEvaluacion.lider_id")
							md-option(ng-repeat="usuario in usuarios" value="{{usuario.id}}") {{usuario.nombres}} {{usuario.apellidos}}
					div(flex ng-show="!seleccionar_lider")
						input.form-control(placeholder="Escriba Nombre del lider" type="text" ng-model="newEvaluacion.lider_nombre")
					
					div(flex)
						.form-group
							label Logo
							ui-select(ng-model="newEvaluacion.imgUsuario" theme="select2" on-select="imagenSelect($item, $model)" )
								ui-select-match(placeholder="Logo de entidad") 
									img(ng-src="{{ $select.selected.public?imgSystemPath:perfilPath }}{{ $select.selected.nombre}}" style="width:25px; height:25px;")
									small(ng-bind-html="' ' + $select.selected.nombre")
								ui-select-choices(repeat="imagen in imagenes | filter: {nombre: $select.search}")
									img(ng-src="{{ imagen.public?imgSystemPath:perfilPath }}{{ imagen.nombre }}" style="width:25px; height:25px;")
									small(ng-bind-html="' ' + imagen.nombre | highlight: $select.search")
					div(flex)
						input.form-control(placeholder="Teléfono" type="text" ng-model="newEvaluacion.telefono")
					
					div(flex)
						input.form-control(placeholder="Alias" type="text" ng-model="newEvaluacion.alias")
					
					.clearfix.right
						md-button.md-primary(type="submit" ng-disabled="guardando") Guardar
						md-button.md-default(ng-click="cancelarNuevo()") Cancelar



			// Formulario para editar
			div(flex-gt-md="40" flex-md="100" ng-show="creando")
					
				form(layout="column" ng-submit="" layout-margin layout-wrap layout-padding)
					div(flex)
						label Nombre:
						input.form-control(type="text" ng-model="currentEvaluacion.nombre")
					
					div(flex="40" flex-gt-lg="20" flex-sm="100")
						md-checkbox(ng-model="seleccionar_lider" aria-label="¿Traducido?")
							| Seleccionar lider
					div(flex ng-show="seleccionar_lider")
						md-select(placeholder="Seleccione Lider" ng-model="currentEvaluacion.lider_id")
							md-option(ng-repeat="usuario in usuarios" value="{{usuario.id}}") {{usuario.nombres}} {{usuario.apellidos}}
					div(flex ng-show="!seleccionar_lider")
						input.form-control(placeholder="Escriba Nombre del lider" type="text" ng-model="currentEvaluacion.lider_nombre")
					
					div(flex)
						.form-group
							label Logo
							ui-select(ng-model="currentEvaluacion.imgUsuario" theme="select2" on-select="imagenSelect($item, $model)" )
								ui-select-match(placeholder="Logo de entidad") 
									img(ng-src="{{ $select.selected.public?imgSystemPath:perfilPath }}{{ $select.selected.nombre}}" style="width:25px; height:25px;")
									small(ng-bind-html="' ' + $select.selected.nombre")
								ui-select-choices(repeat="imagen in imagenes | filter: {nombre: $select.search}")
									img(ng-src="{{ imagen.public?imgSystemPath:perfilPath }}{{ imagen.nombre }}" style="width:25px; height:25px;")
									small(ng-bind-html="' ' + imagen.nombre | highlight: $select.search")
					div(flex)
						input.form-control(placeholder="Teléfono" type="text" ng-model="currentEvaluacion.telefono")
					
					div(flex)
						input.form-control(placeholder="Alias" type="text" ng-model="currentEvaluacion.alias")
					
					.clearfix.right
						md-button.md-primary(type="submit" ng-disabled="guardando") Guardar
						md-button.md-default(ng-click="cancelarEdit()") Cancelar



