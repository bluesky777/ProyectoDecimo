.modal-header
	h3.modal-title ¿Seguro de elegir esta opción?
.modal-body(hotkey="{enter: ok}")
	.row
		.col-lg-12.col-xs-12
			h4(style="text-align: center")
				| {{opcion.letra}}.
				span(ng-bind-html="trustedHtml(opcion.definicion)")

.modal-footer
	md-button.md-raised(ng-click="cancel()") No
	md-button.md-raised.md-primary(ng-click="ok()" ng-disabled="guardando" ) Si
		i.fa.fa-check
